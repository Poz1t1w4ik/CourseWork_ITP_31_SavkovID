@model IEnumerable<StreetLighting.Models.ViewModels.SiteLightingViewModel>

@{ ViewData["Title"] = "Освещение"; }

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="SiteLighting" asp-action="Index" method="post">
                    <p>
                        Тип светильника: <input type="text" name="search" />
                        <input type="submit" value="Поиск" class="btn bg-warning" />
                    </p>
                </form>
                <div>
                    <a asp-controller="SiteLighting" asp-action="Create" class="btn bg-warning">
                        <span>Добавить освещение участка</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead class="bg-warning text-black">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LuminareType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LuminareCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StreetPartId)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody class="table-bordered border-dark">
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.LastDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.LuminareType)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.LuminareCount)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.StreetPartId)
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="SiteLighting" asp-route-id="@item.Id" class="btn bg-dark p-1 text-white">Редактирование</a>
                        <a asp-action="Delete" asp-controller="SiteLighting" asp-route-id="@item.Id" class="btn bg-dark p-1 text-white">Удаление</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>