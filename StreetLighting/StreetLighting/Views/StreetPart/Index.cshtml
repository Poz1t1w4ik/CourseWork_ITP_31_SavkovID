@model IEnumerable<StreetLighting.Models.ViewModels.StreetPartViewModel>

@{ ViewData["Title"] = "Улицы"; }

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="StreetPart" asp-action="Index" method="post">
                    <p>
                        Название улицы: <input type="text" name="search" />
                        <input type="submit" value="Поиск" class="bg-warning" />
                    </p>
                </form>
                <div>
                    <a asp-controller="StreetPart" asp-action="Create" class="btn bg-warning">
                        <span>Добавить участок</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead class="bg-warning text-black">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StreetName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartBuilding)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndBuilding)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody class="table-bordered border-dark">
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.StreetName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.StartBuilding)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.EndBuilding)
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="StreetPart" asp-route-id="@item.Id" class="bg-dark p-1 text-white">Редактирование</a>
                        <a asp-action="Delete" asp-controller="StreetPart" asp-route-id="@item.Id" class="bg-dark p-1 text-white">Удаление</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>